{
  "name": "bore-backend",
  "version": "1.0.0",
  "description": "Backend API for Bore Tunnel Management",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts",
    "start:prod": "npm run build && node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "dev:watch": "nodemon --watch '**/*.ts' --exec ts-node server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config tests/e2e/jest.config.js",
    "test:unit": "jest --testPathIgnorePatterns=e2e --coverage",
    "test:all": "npm run test:unit && npm run test:e2e",
    "seed:test": "node tests/fixtures/seed.js seed",
    "seed:clear": "node tests/fixtures/seed.js clear",
    "benchmark:migrations": "node scripts/benchmark-migrations.js",
    "setup": "./scripts/setup-everything.sh",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:frontend": "ts-node build-frontend.ts",
    "build:frontend:watch": "ts-node build-frontend.ts --watch",
    "build:all": "npm run build && npm run build:frontend",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "migrate": "node -r ts-node/register node_modules/.bin/node-pg-migrate -m migrations -c database.config.ts",
    "migrate:up": "node -r ts-node/register node_modules/.bin/node-pg-migrate up -m migrations -c database.config.ts",
    "migrate:down": "node -r ts-node/register node_modules/.bin/node-pg-migrate down -m migrations -c database.config.ts",
    "migrate:create": "node -r ts-node/register node_modules/.bin/node-pg-migrate create -m migrations -c database.config.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.ts",
      "!node_modules/**",
      "!coverage/**",
      "!dist/**",
      "!**/*.d.ts"
    ]
  }
}
